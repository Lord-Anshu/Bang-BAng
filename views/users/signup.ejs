<% layout("/layouts/boilerplate") %>

<div class="row">
    <h2 class="col-8 offset-2">Sign  up on Wonderlust :- </h2>
    <br> <br>
    <div class="col-8 offset-2">
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div class="mb-4">
                <label for="username" class="form-label">Username :-</label>
                    <input name="username" type="text" id="username" class="form-control" required>
                    <div class="valid-feedback"> Looks &nbsp;  good !</div>
            </div>  
             <div class="mb-4">
                    <label for="email" class="form-label">E-mali :-</label>
                    <input name="email" type="email" id="email" class="form-control" required>
                    <div class="invalid-feedback">Please &nbsp;  enter &nbsp;  E-mail !</div>

             </div>  
             <div class="mb-4">
                <label for="password" class="form-label">Password :-</label>
                <input name="password" type="password" id="password" class="form-control" required>
                <div class="invalid-feedback">Please &nbsp;  enter &nbsp;  password !</div>

            </div>  
            <br><button class="btn btn-success">Sign up </button>
        </form>
    </div>
</div>